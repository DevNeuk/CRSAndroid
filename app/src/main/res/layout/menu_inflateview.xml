<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/whiteTextColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" >

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_itemname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_itemdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:text="Name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_itemprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:text="Name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_itemcalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:text="Name"
                android:textColor="@color/black" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Availability"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />



                    <LinearLayout
                        android:id="@+id/inc"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_weight="1.5"
                        android:weightSum="3"
                        android:background="@drawable/border_design"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_dec"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/dec_minus"
                            android:tint="@color/colorAccent"
                            />

                        <TextView
                            android:id="@+id/txt_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img_inc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:src="@drawable/inc_plus"
                            android:padding="5dp"
                            android:tint="@color/colorAccent"
                            />

                    </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
